<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.xiaoantech.electrombile.ui.main.MainFragment.Fragment.MainFragmentConstract.Presenter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="天气"
            android:onClick="@{()->presenter.getWeatherInfo()}"
            android:id="@+id/weather_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/weather_temperature"
            android:text="30"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintLeft_toRightOf="@+id/weather_image" />
        <Button
            android:id="@+id/messageButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="消息"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        <ImageView
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:background="@color/blueviolet"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/messageButton"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.39"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:id="@+id/button3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/btn_fencne"
            android:onClick="@{() -> presenter.changeFenceStatus()}"
            android:text="开关" />
        <Button
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            android:layout_height="wrap_content"
            android:id="@+id/button6" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btn_battery"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:onClick="@{() -> presenter.getBattery()}"
            android:text="dian" />
        <View
            android:layout_height="0dp"
            android:background="@color/blueviolet"
            app:layout_constraintBottom_toBottomOf="@+id/btn_itinerary"
            app:layout_constraintTop_toTopOf="@+id/btn_itinerary"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_width="1dp"
            android:id="@+id/view" />
        <Button
            android:layout_height="80dp"
            android:layout_width="0dp"
            android:id="@+id/btn_itinerary"
            app:layout_constraintDimensionRatio="W,1:1"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintHorizontal_bias="0.52"
            android:onClick="@{() -> presenter.getItinerary()}"
            android:text="lic" />


        <com.baidu.mapapi.map.MapView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/mapview"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginTop="80dp" />
        <TextView
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_width="0dp"
            android:text="didian"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:id="@+id/textView"
            android:onClick="@{() -> presenter.getGPSInfo()}"/>
        </android.support.constraint.ConstraintLayout>

</layout>
