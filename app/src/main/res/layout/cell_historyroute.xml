

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/contentPanel"
    tools:ignore="MissingConstraints">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeQuantum_tv"
        android:text="18:00-18:30"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/contentPanel"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/contentPanel"
        android:layout_marginLeft="24dp" />
    <com.xiaoantech.electrombile.widget.UnitTextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/itinerary_Stv"
        app:layout_constraintLeft_toLeftOf="@+id/contentPanel"
        app:layout_constraintRight_toRightOf="@+id/contentPanel"
        app:layout_constraintBottom_toBottomOf="@+id/contentPanel"
        app:layout_constraintTop_toTopOf="@+id/contentPanel"
        app:layout_constraintHorizontal_bias="0.11"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="里程"
        android:id="@+id/itinerary_tv"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/itinerary_Stv"
        app:layout_constraintLeft_toLeftOf="@+id/itinerary_Stv" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@+id/contentPanel"
        app:layout_constraintRight_toRightOf="@+id/contentPanel"
        app:layout_constraintBottom_toBottomOf="@+id/itinerary_Stv"
        app:layout_constraintTop_toTopOf="@+id/itinerary_Stv"
        app:layout_constraintHorizontal_bias="0.43"
        android:id="@+id/time_Tv" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="用时"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/time_Tv"
        app:layout_constraintTop_toBottomOf="@+id/time_Tv"
        android:id="@+id/time_tv" />


    <com.xiaoantech.electrombile.widget.UnitTextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/contentPanel"
        app:layout_constraintRight_toRightOf="@+id/contentPanel"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintBottom_toBottomOf="@+id/itinerary_Stv"
        app:layout_constraintTop_toTopOf="@+id/itinerary_Stv"
        android:id="@+id/speed_Stv" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均速度"
        android:id="@+id/speed_tv"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/speed_Stv"
        app:layout_constraintTop_toBottomOf="@+id/speed_Stv" />
</android.support.constraint.ConstraintLayout>
