<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout1"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_plane"
                    android:id="@+id/image_plane"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout1"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout1"
                    android:layout_marginTop="10dp"
                    />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_unselected"
                    android:id="@+id/select_btn_plane"
                    app:layout_constraintLeft_toLeftOf="@+id/image_plane"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="@+id/image_plane"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2D平面地图"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/image_plane"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintCenterX_toCenterX="@+id/constraintLayout1"
                    tools:layout_editor_absoluteX="0dp" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout2"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_satellite"
                    android:id="@+id/image_satellite"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
                    android:layout_marginTop="10dp"
                    />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_unselected"
                    android:id="@+id/select_btn_satellite"
                    app:layout_constraintLeft_toLeftOf="@+id/image_satellite"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="@+id/image_satellite"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="卫星图"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/image_satellite"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintCenterX_toCenterX="@+id/constraintLayout2"
                    tools:layout_editor_absoluteX="0dp" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout3"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_3d"
                    android:id="@+id/image_3D"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
                    android:layout_marginTop="10dp"
                    />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_unselected"
                    android:id="@+id/select_btn_3D"
                    app:layout_constraintLeft_toLeftOf="@+id/image_3D"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="@+id/image_3D"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3D俯视图"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/image_3D"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintCenterX_toCenterX="@+id/constraintLayout3"
                    tools:layout_editor_absoluteX="0dp" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>