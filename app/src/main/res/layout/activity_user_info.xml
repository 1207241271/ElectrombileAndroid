<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="presenter"
            type="com.xiaoantech.electrombile.ui.main.SettingFragment.activity.UserManager.UserInfo.UserInfoContract.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/navigation"
            layout="@layout/bar_navigation_title"/>


        <android.support.constraint.ConstraintLayout


        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/button_yellow"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/head"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintLeft_toLeftOf="@+id/imageView4"
                app:layout_constraintRight_toRightOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />



        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/view"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.26" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="263dp"
                android:background="@color/avoscloud_feedback_white"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:id="@+id/linearLayout7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="姓名"
                        android:layout_marginLeft="33px"
                        android:textAlignment="textStart"
                        android:textColor="@color/avoscloud_feedback_back_background"
                        android:textSize="35px"/>

                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="请输入您的姓名"
                        android:layout_marginLeft="50px"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondaryNoDisable"
                        android:textSize="35px" />

                </LinearLayout>

                <View
                    android:layout_width="670px"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="昵称"
                        android:layout_marginLeft="33px"
                        android:textAlignment="textStart"
                        android:textColor="@color/avoscloud_feedback_back_background"
                        android:textSize="35px" />

                    <TextView
                        android:id="@+id/txt_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="请输入您的昵称"
                        android:layout_marginLeft="50px"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondaryNoDisable"
                        android:textSize="35px" />

                </LinearLayout>

                <View
                    android:layout_width="670px"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="性别"
                        android:layout_marginLeft="33px"
                        android:textAlignment="textStart"
                        android:textColor="@color/avoscloud_feedback_back_background"
                        android:textSize="35px" />

                    <TextView
                        android:id="@+id/txt_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="请选择"
                        android:layout_marginLeft="50px"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondaryNoDisable"
                        android:textSize="35px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/background_grey"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="出生日期"
                        android:layout_marginLeft="33px"
                        android:textAlignment="textStart"
                        android:textColor="@color/avoscloud_feedback_back_background"
                        android:textSize="35px" />

                    <TextView
                        android:id="@+id/txt_birth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="请选择"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondaryNoDisable"
                        android:textSize="35px" />

                </LinearLayout>

                <View
                    android:layout_width="670px"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="身份证号"
                        android:layout_marginLeft="33px"
                        android:textAlignment="textStart"
                        android:textColor="@color/avoscloud_feedback_back_background"
                        android:textSize="35px"/>

                    <TextView
                        android:id="@+id/txt_identity_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="请输入身份证号"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondaryNoDisable"
                        android:textSize="35px" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/shape"
                android:onClick="@{() -> presenter.gotoUserInfoRevise()}"
                android:text="修改信息"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                app:layout_constraintHorizontal_bias="0.514" />

    </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>