<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="presenter"
            type="com.xiaoantech.electrombile.ui.main.SettingFragment.activity.UserManager.UserInfo.UserInfoContract.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/navigation"
            layout="@layout/bar_navigation_title"/>


        <android.support.constraint.ConstraintLayout


        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="80dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints"
            android:background="@color/background_grey">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/button_yellow"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                android:id="@+id/imageView4" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head"
            app:layout_constraintRight_toRightOf="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />



        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/view"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.26" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:orientation="vertical"
            android:background="@color/avoscloud_feedback_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="    姓名"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/avoscloud_feedback_back_background"
                    android:textStyle="normal|bold"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/txt_user_name"
                    android:text="    请输入您的姓名"
                    android:textSize="17sp"
                    android:textColor="?android:attr/textColorSecondaryNoDisable"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="    昵称"
                    android:textSize="18sp"
                    android:textColor="@color/avoscloud_feedback_back_background"
                    android:textStyle="normal|bold"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/txt_nick_name"
                    android:text="    请输入您的昵称"
                    android:textAlignment="textStart"
                    android:textSize="17sp"
                    android:textColor="?android:attr/textColorSecondaryNoDisable" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="    性别"
                    android:gravity="center"
                    android:textColor="@color/avoscloud_feedback_back_background"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/txt_sex"
                    android:text="    请选择"
                    android:textAlignment="textStart"
                    android:textSize="17sp"
                    android:textColor="?android:attr/textColorSecondaryNoDisable" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/background_grey"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="   出生日期"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/avoscloud_feedback_back_background"
                    android:textStyle="normal|bold"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/txt_birth"
                    android:layout_gravity="center_vertical"
                    android:text="    请选择"
                    android:textSize="17sp"
                    android:textColor="?android:attr/textColorSecondaryNoDisable"
                    android:textAlignment="textStart" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="   身份证号"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/avoscloud_feedback_back_background"
                    android:textStyle="normal|bold"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/txt_identity_num"
                    android:text="    请输入身份证号"
                    android:textSize="17sp"
                    android:textColor="?android:attr/textColorSecondaryNoDisable"
                    android:textAlignment="textStart" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="48dp"
            android:text="修改信息"
            android:onClick="@{() -> presenter.gotoUserInfoRevise()}"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:background="@drawable/shape" />

    </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>